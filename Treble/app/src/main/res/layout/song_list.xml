<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:contentDescription="@string/album_art"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="45dp"
        android:src="@mipmap/ic_arrow_upward_white_24dp"
        android:id="@+id/upvote_button"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:tint="@color/colorPrimary"
        android:background="@android:color/transparent" />

    <TextView
        android:text="@string/votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upvote_button"
        android:layout_alignEnd="@+id/upvote_button"
        android:layout_marginTop="18dp"
        android:id="@+id/votes"
        android:layout_alignStart="@+id/upvote_button"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_arrow_downward_white_24dp"
        android:id="@+id/downvote_button"
        android:tint="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:minHeight="50dp"
        android:minWidth="45dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/votes"
        android:layout_alignStart="@+id/upvote_button"
        android:layout_alignEnd="@+id/votes" />

    <TextView
        android:id="@+id/song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/song_title"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/album"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/artist"
        android:layout_below="@+id/song"
        android:layout_alignStart="@+id/song" />

</RelativeLayout>

